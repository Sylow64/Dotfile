<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox 3">

    <separator label="Menu" />

            <item label="Buscador de Apps">
            <action name="Execute">
                <command>rofi -show drun</command>
                <startupnotify>
                    <enabled>yes</enabled>
                    <wmclass>Code</wmclass>
                </startupnotify>
            </action>
        </item>

            <item label="Terminal">
            <action name="Execute">
                <command>lxterminal</command>
                <startupnotify>
                    <enabled>yes</enabled>
                    <wmclass>Code</wmclass>
                </startupnotify>
            </action>
        </item>

            <item label="Gestor de Archivos">
            <action name="Execute">
                <command>pcmanfm</command>
                <startupnotify>
                    <enabled>yes</enabled>
                    <wmclass>Code</wmclass>
                </startupnotify>
            </action>
        </item>

            <item label="Navegador Web">
            <action name="Execute">
                <command>firefox</command>
                <startupnotify>
                    <enabled>yes</enabled>
                    <wmclass>Code</wmclass>
                </startupnotify>
            </action>
        </item>

            <item label="Cambiar Fondo">
            <action name="Execute">
                <command>nitrogen</command>
                <startupnotify>
                    <enabled>yes</enabled>
                    <wmclass>Code</wmclass>
                </startupnotify>
            </action>
        </item>

            <item label="Reconfigure OpenBox">
            <action name="Execute">
                <command>openbox --reconfigure</command>
            </action>
        </item>






  <separator />

            <item label="Power menu">
            <action name="Execute">
                <command>~/.config/rofi/rofi/powermenu</command>
                <startupnotify>
                    <enabled>yes</enabled>
                    <wmclass>Code</wmclass>
                </startupnotify>
            </action>
        </item>

</openbox_menu>